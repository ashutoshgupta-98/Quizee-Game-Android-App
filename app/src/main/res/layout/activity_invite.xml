<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/invite_background"
        tools:context=".InviteActivity">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Invite Now"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:srcCompat="@drawable/ic_invite_and_earn" />

        <TextView
            android:id="@+id/refercodetv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center_horizontal"
            android:minWidth="160dp"
            android:padding="12dp"
            android:text="Your Refer Code"
            android:textAlignment="center"
            android:textColor="@color/Yellow"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView10" />

        <TextView
            android:id="@+id/referCodeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/refer_background"
            android:gravity="center_horizontal"
            android:minWidth="160dp"
            android:padding="12dp"
            android:textAlignment="center"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/refercodetv" />

<!--        <Button-->
<!--            android:id="@+id/redeembtn"-->
<!--            android:layout_width="180dp"-->
<!--            android:layout_height="70dp"-->
<!--            android:layout_above="@id/sharebtn"-->
<!--            android:layout_marginTop="40dp"-->
<!--            android:background="@drawable/ic_button9"-->
<!--            android:minWidth="150dp"-->
<!--            android:paddingBottom="10dp"-->
<!--            android:text="Redeem Code"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintTop_toBottomOf="@+id/referCodeTv" />-->

        <Button
            android:id="@+id/sharebtn"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:background="@drawable/ic_button9"
            android:minWidth="150dp"
            android:paddingBottom="10dp"
            android:text="Share Your Code"
            app:layout_constraintBottom_toTopOf="@+id/adView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/referCodeTv" />

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            app:adSize="BANNER"
            app:adUnitId="ca-app-pub-6301220023928445/1881985043"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"></com.google.android.gms.ads.AdView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>